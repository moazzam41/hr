<div class="header">
  <div class="container">
    <h1>Home</h1>
  </div>
</div>

<div class="container">
  <%= render "layouts/flash_block" %>

  <div class="default-block">
    <h2>Your Stats</h2>
    <div class="row">
      <% if current_user.manager? %>
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to "#{@projects} projects", projects_path %></h3>
        <%= link_to "Active Projects ( #{@active_projects} )", projects_path, class: "btn btn-warning btn-margin" %> 
        <%= link_to "Complete Projects ( #{@complete_projects} )", projects_path, class: "btn btn-success btn-margin" %>
        <%= link_to "Overdue Projects ( #{@overdue_projects} )", projects_path, class: "btn btn-danger btn-margin" %>
      </div>
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to "#{@user.tasks.count} created tasks", get_all_tasks_path %></h3>
        <%= link_to "Active Tasks ( #{@active_tasks} )", get_all_tasks_path, class: "btn btn-warning btn-margin" %> 
        <%= link_to "Complete Tasks ( #{@complete_tasks} )", get_all_tasks_path, class: "btn btn-success btn-margin" %>
        <%= link_to "Overdue Tasks ( #{@overdue_tasks} )", get_all_tasks_path, class: "btn btn-danger btn-margin" %>
      </div>
      <% end %>
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to "#{@user.assigned_tasks.count} assigned tasks", get_all_tasks_path %></h3>
        <%= link_to "Active Tasks ( #{@active_assigned_tasks} )", get_all_tasks_path, class: "btn btn-warning btn-margin" %> 
        <%= link_to "Complete Tasks ( #{@complete_assigned_tasks} )", get_all_tasks_path, class: "btn btn-success btn-margin" %>
        <%= link_to "Overdue Tasks ( #{@overdue_assigned_tasks} )", get_all_tasks_path, class: "btn btn-danger btn-margin" %>
      </div>
    </div> <!-- row end -->
  </div> <!-- block end -->

</div> <!-- container end -->